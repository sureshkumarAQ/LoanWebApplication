<!doctype html>
<html>
<head>
    <title>Profile</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body{
             word-wrap:break-word;
        }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1> Loan Requests</h1>
        <a href="/user/applyForLoan" class="btn btn-default btn-md">Apply for Loan</a>
        <a href="/user/myProfile" class="btn  btn-default btn-md">myProfile</a>

        <a href="/user/login" class="btn  btn-default btn-md">Login</a>
        <a href="/user/register" class="btn  btn-default btn-md">Register</a>

    </div>

    
    <div class="row">

        <!-- LOCAL INFORMATION -->
        <% for(var i=0;i<loans.length;i++) { %>

        <div class="col-sm-6">
            <div class="well">
                <h4><span class="fa fa-user"></span> User Details</h4>
                    <p>
                        
                        <strong>Username</strong>: <%=loans[i].user.username %><br>
                        
                        <strong>Lecs</strong>: <%=loans[i].user.lecs %><br>
                        <strong>Max Loan Amount</strong>: <%=loans[i].user.maxLoanAmount %><br>
                    </p>
                    <div class="well">
                        <h4><span class="fa fa-user"></span> Loan Details</h4>
                            <p>
                                <strong>Loan Amount</strong>: <%=loans[i].loanAmount %><br>
                                <strong>Tenure</strong>: <%=loans[i].tenure %><br>
                                <strong>Interest Rate</strong>: <%=loans[i].interestRate %><br>
                            </p>
                    </div>
                    <form action="/loan/acceptLoan/<%=loans[i]._id %>" method="post">
                    <button type="submit" class=" ">Accept</button>
                    
                </form>
                <br/>
                <form action="/loan/modifyLoan/<%=loans[i]._id %>" method="get">
                    <button type="submit" class=" ">Modify</button>
            </form>

            </div>
            
        </div>
        
        <% } %>

    </div>


</div>
</body>
</html>